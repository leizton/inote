<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyMMdd-HH:mm:ss} %thread %-5p %c{1}:%L] %m%n</pattern>
        </encoder>
    </appender>

    <!-- debug -->
    <appender name="debugLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <append>true</append>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyMMdd-HH:mm:ss} %thread %-5p %c{1}:%L] %m%n</pattern>
        </encoder>
        <!-- 只接受debug, 更高级别请用ThresholdFilter -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>debug</level>
        </filter>
    </appender>

    <!-- info -->
    <appender name="infoLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/info.%d{yyyy-MM-dd}.log</fileNamePattern>
            <append>true</append>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyMMdd-HH:mm:ss} %thread %-5p %c{1}:%L] %m%n</pattern>
        </encoder>
        <!-- 只接受info, 更高级别请用ThresholdFilter -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>info</level>
        </filter>
    </appender>

    <!-- warn -->
    <appender name="warnLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/warn.%d{yyyy-MM-dd}.log</fileNamePattern>
            <append>true</append>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyMMdd-HH:mm:ss} %thread %-5p %c{1}:%L] %m%n</pattern>
        </encoder>
        <!-- 只接受warn, 更高级别请用ThresholdFilter -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>warn</level>
        </filter>
    </appender>

    <!-- error -->
    <appender name="errorLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <append>true</append>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyMMdd-HH:mm:ss} %thread %-5p %c{1}:%L] %m%n</pattern>
        </encoder>
        <!-- 只接受error, 更高级别请用ThresholdFilter -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>error</level>
        </filter>
    </appender>

    <root level="info">
        <appender-ref ref="console" />
        <!--<appender-ref ref="debugLog" />-->
        <!--<appender-ref ref="infoLog" />-->
        <!--<appender-ref ref="warnLog" />-->
        <!--<appender-ref ref="errorLog" />-->
    </root>
</configuration>